        <p>Choose an option below:</p>
        <div class="options">
            <button class="btn" onclick="showMessage('loveLetter')">Love Letter</button>
            <button class="btn" onclick="showMessage('photoMemories')">Photo Memories</button>
            <button class="btn" onclick="showMessage('anniversaryDate')">Anniversary Date</button>
        </div>
        <div id="message" style="margin-top: 20px; font-size: 1.5em;"></div>
    </div>
    <script>
        function showMessage(option) {
            let message = document.getElementById('message');
            if (option === 'loveLetter') {
                message.innerHTML = "<p>My love, you mean the world to me. Happy Valentine's Day! ‚ù§Ô∏è</p>";
            } else if (option === 'photoMemories') {
                message.innerHTML = "<p>Here are our best moments together! (You can add a gallery here) üì∏</p>";
            } else if (option === 'anniversaryDate') {
                message.innerHTML = "<p>Our anniversary is on [Insert Date]! Forever together! üíë</p>";
            }
        }
    </script>
